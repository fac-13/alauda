<section class="container__form">
 <h2 class="title__signup">Sign up</h2>  
 <form class="form__signup" action="/signup" method="post" novalidate>
    <label class="label" for="username">Username</label>
    <input id="username" name="username" type="text" class="input-text signup__username" required autofocus> {{#if err}}
    <p class="error">{{err}}</p>
    {{/if}}
    <p id="username-err" class="error"> </p>
    <label class="label" for="password">Password</label>
    <input id="password" name="password" type="password" class="input-text signup__password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
      required>
    <p id="password-err" class="error"> </p>

    <label class="label" for="confirm-password">Confirm Password</label>

    <input id="confirm-password" name="confirmPassword" type="password" class="input-text signup__confirm-password" required>    </input>
    <p id="confirm-password-err" class="error"> </p>

    <label class="label question" for="like">Let us know what you like:</label>
    <br/>
    
    <div class="container__checkbox">
      <input class="regular-checkbox" type="checkbox" name="like" value="tech">Tech</input>
      <input class="regular-checkbox" type="checkbox" name="like" value="nature">Nature</input>
      <input class="regular-checkbox" type="checkbox" name="like" value="movies">Movies</input>
      <input class="regular-checkbox" type="checkbox" name="like" value="science">Science</input>
      <input class="regular-checkbox" type="checkbox" name="like" value="art">Art</input>
      <input class="regular-checkbox" type="checkbox" name="like" value="books">Books</input>
    </div>

    <div class="container__button">
      <input type="submit" value="sign up" class="button input__signup"></input>
    </div>


  </form>
</section>
